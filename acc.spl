: printdirentry
  cnt @ 11 +
  dup 20 > if 10 - 22 else 2 then at
  $10 * bufbase @ +
  dup @ 0 = if drop exit then
  dup @ $80 and if drop exit then
  cnt ++
  dup @ $20 and if $2A emit else space then space
(  1+  dup @ .$ space ) ( Length )
(  2+  dup @ .$ space ) ( Start Sector )
  5 +  dup   8 type     ( Filename )
          $2e emit      ( . )
  8 +       3 type cr   ( Extender )
;

