: strappend ( str1 str2 -- )
  dup
  c@ lenstr2 c!
  adrstr2 !
  dup
  c@ lenstr1 c!
  adrstr1 !

  lenstr1 c@ lenstr2 c@ + adrstr1 @ c!
  lenstr2 c@ 1 + lenstr2 c!
  {
    adrstr1 @ lenstr1 c@ + lenstr2 c@ +
    adrstr2 @ lenstr2 c@ + c@ swap c!
    lenstr2 c@ 1 - dup lenstr2 c!
    0 = if
      exit
    then
  }
;

: tofn83 ( addr cnt -- n )
  cntfn83 c!
  cntfn83 c@ stfn83 @ c!
  {
    dup c@ stfn83 @ cntfn83 c@ + c!
    cntfn83 c@ 1 - dup cntfn83 c!
    0 = if
    exit
    then
  }
  drop
;

: writedirentry ( direntryno -- )
  clearbuf

  $10 * bufbase @ +
  dup @ 0 = if drop exit then
  dup @ $80 and if drop exit then
  dup @ $20 and if $2A else $20 then buf $80 + 17 + c!
  $20 buf $80 + 18 + c! ( space )
  $20 buf $80 + 30 + c! ( space )
  1+  dup @ buf $80 + 31 + swap 0 &.   ( Length )
  buf $80 + 31 + dup 7 + swap 3 cmove>
 ( 3 +  dup @ .$ space )  ( Start Sector )
  4 +  dup buf $80 + 18 +  8 cmove     ( Filename )
  8 +      buf $80 + 27 +  3 cmove     ( Extender )
       $2e buf $80 + 26 + c!           ( . )

  buf $80 + 18 + i ! {
    i @ c@ dup $ff = if drop break then ( stop on $FF )
    $7F and i c!                 ( mask msb    )
    i ++                         ( next char   )
  }
 (  buf $80 + 35 type cr )

  cnt @
  preparesio s2ucmd
  $13 dcmnd c!
  dup 1 >> daux !                   # no of 64byte blocks
  $07 dtimlo c!
  48 buf $80 + c!                   # laenge des Records
  1 and if 32 else 0 then buf $80 + 1+ c! # offset
  buf $80 +  2 + 15 erase
  buf $80 + 34 + 13 $20 fill
  $0A0D buf $80 + 47 + !
  buf $80 + dbuf !
  writecmd
  cnt ++

;

: writetxtfile

  clearbuf
  0 cnt !
  bufbase @ secbuf !
  360 sector !
  {
    1 sector +!
    sector @ readsec drop
    0 i !
    {
    (  i @ .$ cr )
      i @ writedirentry
      i ++
      i @ 8 = if break then
    }
    sector @ 368 = if break then
  }

 ( 22 2 at " press key" disp key drop )
;

: maketxtfile
  clearbuf dpath2buf
  $54 buf dup c@ + 2 - c!
  $58 buf dup c@ + 1 - c!
  $54 buf dup c@ + 0 - c!
  preparesio s2ucmd
  $11 dcmnd c!
  $08 daux !
  $07 dtimlo c!
  buf dbuf !
  writecmd
;

: makeatr
  clearbuf dpath2buf
  preparesio s2ucmd
  sectors @ dup >< daux !
  $FFFF = if 1 daux ! then
  bytsec @ $100 = if
    daux c@ $80 or daux c!
  else
    daux c@ $7F and daux c!
  then
  $07 dcmnd c! buf dbuf !
  $10 dtimlo c! writecmd
;

: rmatr
  clearbuf dpath2buf
  preparesio s2ucmd
  $09 dcmnd c!
  $00 daux   !
  buf dbuf !
  $10 dtimlo c!
  writecmd
;

: mountatr
  clearbuf dpath2buf
  preparesio s2ucmd
  $BB daux c!
  $05 dcmnd c!
  buf dbuf !
  $07 dtimlo c!
  writecmd
;

: seccmd ( i cmd -- rc )
  preparesio dcmnd c!
  dup 4 < if $80 else bytsec @ then dbyt !
  daux ! secbuf @ dbuf !
;

: readsec ( i -- )
  $52 seccmd devnm @ dunit c! readcmd
;

: writesec ( i -- )
  $50 seccmd 3 dunit c! writecmd
;

code fullquery ( checks if sector buffer is empty )
[    lda secbuf  ]
[    sta ta      ]
[    lda secbuf+1 ]
[    sta ta+1    ]
[    ldy #0      ]
[    tya         ]
end
code fq1
[    ora (ta),y	 ]
[    iny         ]
[    cpy bytsec  ]
[    bne fq1	 ]
[    jmp push0a  ]
end

# user interface code

: clearfcount
  0 fcount !
;

: toggleautoinc
  autoinc c@ if
    incdigit
  else
    1 autoinc ctoggle
    1 cdigit !
    clearfcount
    printfile
  then
;

: qclearfcount ( n -- )
  fcount @ swap > if clearfcount then
;

: printfile
    cdigit @ 1 = if 9     qclearfcount then
    cdigit @ 2 = if 99    qclearfcount then
    cdigit @ 3 = if 999   qclearfcount then
    cdigit @ 4 = if 9999  qclearfcount then
    fcount @ >outbuf
    cdigit @ i ! {
        $30 ( ASCII 0 ) dpath dup c@ + 3 sidetgl c@ + i @ + - c!
        i -- i @ 0 = if break then
    }
    $A1  ( source = outbuf+1 )
    dpath dup c@ + $A0 c@ 3 sidetgl c@ + + - ( dest )
    $A0 c@ cmove
;

: nextfile
  cdigit @ if
    fcount ++
    printfile
  then
;

: prevfile
  cdigit @ if
    fcount --
    fcount @ $FFFF = if 9999 fcount ! then
    printfile
  then
;

: nextside
  side c@ if 65 else 66 then dpath dup c@ + 4 - c!
  1 side ctoggle
;

: sidetgl_switch
  1 sidetgl ctoggle
  sidetgl c@ if
    0 side c!
    65 dpath dup c@ + 4 - c!
  else
    48 dpath dup c@ + 4 - c!
  then
  printfile
;

: toggleside
  1 sidetgl ctoggle
  sidetgl c@ if nextside then
;

: txtmodesel
