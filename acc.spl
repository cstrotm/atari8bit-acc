code scopy
[    ldy #5 ]
[    jmp sc1 ]
end
code sc1
[    lda stzeros1,y  ]
[    clc    ]
[    adc #1 ]
[    sta stzeros1,y ]
[    cmp #$3A ]
[    bne sc2  ]
[    lda #$30 ]
[    sta stzeros1,y ]
[    dey ]
[    bne sc1 ]
[    jmp sc2 ]
end
code sc2
[    rts     ]
end

