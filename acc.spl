  0 cnt !
  bufbase @ secbuf !
  360 sector !
  {
    1 sector +!
    sector @ readsec drop
    0 i !
    {
      cnt @ 22 = if 22 2 at " press key" disp key drop 0 cnt ! 11 12 rcls then
      i @ printdirentry
      i ++
      i @ 8 = if break then
    }
    sector @ 368 = if break then
  }
  22 2 at " press key" disp key drop
;

